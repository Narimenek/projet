<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<AnchorPane minHeight="0.0" prefHeight="415.0" prefWidth="684.0" styleClass="backgrnd" stylesheets="@../application/application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RechercheClientController">
   <children>
      <Label layoutX="280.0" layoutY="35.0" prefHeight="52.0" prefWidth="129.0" text="Rechercher">
         <font>
            <Font name="Arial Rounded MT Bold" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="rechercheParPrixField" layoutX="280.0" layoutY="100.0" prefHeight="26.0" prefWidth="161.0" promptText="Recherche Par Prix" style="-fx-border-color: #7294AC;" styleClass="tf_box" stylesheets="@../application/application.css" />
     
      <Button fx:id="rechercherButton" layoutX="300.0" layoutY="373.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="81.0" styleClass="buttons" stylesheets="@../application/application.css" text="Rechercher" onAction="#rechercherVoiture" />
      
      <Button layoutX="540.0" layoutY="360.0" mnemonicParsing="false" onAction="#retourner" text="Retour">
    <font>
        <Font size="18.0" />
    </font>
</Button>
      <ComboBox fx:id="marqueComboBox" layoutX="280.0" layoutY="150.0" prefHeight="26.0" prefWidth="129.0" promptText="Marque" style="-fx-border-color: #7294AC;" styleClass="tf_box" stylesheets="@../application/application.css" />
      <ComboBox fx:id="couleurComboBox" layoutX="280.0" layoutY="200.0" prefHeight="26.0" prefWidth="129.0" promptText="Couleur" style="-fx-border-color: #7294AC;" styleClass="tf_box" stylesheets="@../application/application.css" />
      <TableView fx:id="resultatTableView" layoutX="50.0" layoutY="250.0" prefHeight="100.0" prefWidth="600.0">
        <columns>
          <!-- Marque Column -->
          <TableColumn text="Marque" fx:id="marqueColumn">
              <cellValueFactory>
                  <PropertyValueFactory property="marque" />
              </cellValueFactory>
          </TableColumn>

          <!-- Couleur Column -->
          <TableColumn text="Couleur" fx:id="couleurColumn">
              <cellValueFactory>
                  <PropertyValueFactory property="couleur" />
              </cellValueFactory>
          </TableColumn>

          <!-- Prix Column -->
          <TableColumn text="Prix" fx:id="prixColumn">
              <cellValueFactory>
                  <PropertyValueFactory property="prix" />
              </cellValueFactory>
          </TableColumn>
        </columns>
      </TableView>
   </children>
</AnchorPane>